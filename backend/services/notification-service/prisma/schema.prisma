generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Notification {
  id            String   @id @default(uuid())
  user_id       String
  appointment_id String?
  title         String
  message       String
  type          String
  channel       String?  @default("app")
  priority      String?  @default("medium")
  sent_at       DateTime?
  read_at       DateTime?
  action_url    String?
  created_at    DateTime @default(now())
}
